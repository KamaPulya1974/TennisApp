/**app.wxss**/

/* фон страницы #EFF0F7 */

.container {
  background-color: #F9F9F9;
  border-radius: 2.2vw;
  padding: 4.5vw 4.2vw 4.5vw 4.2vw;
  margin: 2.2vw 2.2vw 2.2vw 2.2vw;
  overflow: hidden;
}
.container:first-child {
  padding-top: 0;
}

.over {
  overflow: hidden;
}

.margin-top {
  margin-top: 4.4vw;
}
.margin-top-10 {
  margin-top: 3vw;
}
.margin-top-5 {
  margin-top: 1.5vw;
}
.margin-right-2 {
  margin-right: 0.5vw;
}
.margin-right-8 {
  margin-right: 2.2vw;
}
.margin-right-21 {
  margin-right: 5.8vw;
}
.margin-top-26 {
  margin-top: 7.2vw;
}

.flex-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.flex-column {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.head-title {
  display: flex;
  justify-content: space-between;
}
  .head-title:first-child > text {
    font-weight: bold;
  }
  .head-title:first-child > navigator {
    text-decoration: underline;
    color: #55779B;
  }


.yellow-sticker { /* желтые плашки */
  background: #FFB710;
  border-radius: 1.2vw;
  padding: 0.8vw 2vw 1vw 2vw;
}
.green-sticker { /* зеленые плашки */
  display: flex;
  align-items: center;

  background: #539968;
  border-radius: 0.7vw;
  color: white;
  font-weight: 700;
  padding: 0.6vw 1.1vw 0.7vw 1.1vw;
}
.green-sticker > image {
  margin-right: 0.5vw;
  width: 3vw;
  height: 3vw;
}
.green-sticker > text {
  font-size: 3.5vw !important;
}

.gradient-rate {
  display: flex;
  align-items: center;

  background: linear-gradient(to right bottom, #51C276, #3783D7);
  border-radius: 0.7vw;
  color: white;
  font-weight: 700;
  padding: 0.6vw 1.1vw 0.7vw 1.1vw;
}
.gradient-rate > image {
  margin-right: 0.5vw;
  width: 3vw;
  height: 3vw;
}
.gradient-rate > text {
  font-size: 3.5vw !important;
}


/* серая плашка рейтинга */
.gray-rate {
  background: #42995C;
  mix-blend-mode: luminosity;
  border-radius: 1vw;
  padding: 0.8vw;
  padding-right: 1vw;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
}
  .gray-rate > image {
    width: 3vw;
    height: 3vw;
    margin-right: 1vw;
  }
  .gray-rate > text {
    font-weight: 700;
    font-size: 3.6vw;
  }

/* зеленая плашка ограничения рейтинга на турнире */
.max-rate {
  background: #42995C;
  border-radius: 1vw;
  font-weight: 700;
  font-size: 3.9vw;
  color: white;
  padding: 0.8vw 1.7vw 0.8vw 1.7vw;
  text-align: center;
  vertical-align: middle;
  display: flex;
  justify-content: center;
  align-items: center;
}



/* тень */
.shadow {
  box-shadow: 0 0.5vw 1.6vw rgba(0, 0, 0, 0.2);
}



/* ТЕКСТЫ */

.bold { /* жирный */
  font-weight: bold;
}
.bold-header { /* жирный заголовок */
  font-weight: bold;
  font-size: 4.5vw;
}
.weight-700 {
  font-weight: 700;
}
.low-light { /* бледный */
  color: #55779B;
  opacity: 0.5;
}
.light-blue {
  color: #49637D;
}
.low-dark {
  color: #49637D;
}
.blue {
  color: #86aec7;
}
.dark-blue {
  color: #247AAE !important;
}
.ping-pong-blue {
  color: #247AAE;
}
.ping-pong-blue-50 {
  color: #23719F80;
}
.gray-50 {
  color: #818181;
}


.h12 {
  font-size: 3.3vw;
}
.h13 {
  font-size: 3.6vw;
}
.h14 {
  font-size: 3.9vw;
}
.h15 {
  font-size: 4.2vw;
}
.h16 {
  font-size: 4.4vw;
}
.h17 {
  font-size: 4.7vw;
}




/* ФОТО */
.avatar {
  width: 26vw;
  height: 26vw;
  border-radius: 100%;
  background: linear-gradient(to right bottom, #51C276, #3783D7);
  padding: 1.1vw;
}
.middle-avatar {
  width: 12vw;
  height: 12vw;
  border-radius: 100%;
  background: linear-gradient(to right bottom, #51C276, #3783D7);
  padding: 0.5vw;
}


/* ИКОНКИ */
.map-pointer {
  width: 2.2vw;
  height: 3vw;
  margin-right: 1vw;
}
.grade-star {
  width: 3.6vw;
  height: 3.6vw;
  margin-right: 1vw;
}
.comment-icon {
  width: 3.9vw;
  margin-right: 1vw;
  height: 3.3vw;
}
.children-icon {
  width: 6.4vw;
  height: 3.9vw;
}