/* pages/singleTournament/singleTournament.wxss */
.tournament-main {
  /* display: flex;
  flex-direction: column;
  align-content:  */
}

.tournament-main > view:first-child {
  justify-content: center;
}
  .tournament-main > view:first-child > text:nth-child(2) {
    margin: 0 3vw 0 3vw;
  }
  .tournament-head {
    width: 62vw;
    margin-left: auto;
    margin-right: auto;
    padding-top: 5.2vw;
  }
    .tournament-head > text:nth-child(2) {
      font-size: 5vw;
      font-weight: 600;
    }
    .tournament-head > text:nth-child(3) {
      opacity: 0.5;
    }

  .tournament-info text {
    font-size: 3.9vw;
  }
  .tournament-info > view {
    padding-top: 3vw;
    display: flex;
    align-items: center;
  }
    .tournament-info > view > image {
      margin-right: 2vw;
    }
      .tournament-info > view:nth-child(1) > image {
        width: 3.3vw;
        height: 4vw;
      }
      .tournament-info > view:nth-child(2) > image {
        width: 3vw;
        height: 4vw;
      }
        .tournament-info > view:nth-child(2) > text {
          margin-right: 2vw;
        }
      .tournament-info > view:nth-child(3) > image {
        width: 2.7vw;
        height: 4vw;
      }
        .tournament-info > view:nth-child(3) > text {
          margin-right: 2vw;
        }
        .tournament-info > view:nth-child(3) {
          color: #339933;
        }
      .tournament-info > view:nth-child(4) > image {
        width: 3vw;
        height: 4vw;
      }





  .tournament-adress {
    
  }
    .tournament-adress-text > view {
      padding-top: 3vw;
      display: flex;
      align-items: center;
    }
    .tournament-adress-text text {
      font-size: 3.9vw;
    }
      .tournament-adress-text > view > image {
          margin-right: 2vw;
      }
      .tournament-adress-text > view > text {
        color: #49637D;
      }
        .tournament-adress-text > view:nth-child(1) > image {
            width: 3.6vw;
            height: 4vw;
        }
        .tournament-adress-text > view:nth-child(2) > image {
            width: 2.5vw;
            height: 4vw;
        }
        .tournament-adress-text > view:nth-child(3) > image {
            width: 3.3vw;
            height: 4vw;
        }

    .tournament-adress > image {
      width: 28vw;
      height: 28vw;
      border-radius: 1.4vw;
      flex-shrink: 0;
      margin-left: 3vw;
    }


    .tournament-register-button {
      width: 51vw;
      border: none;
      border-radius: 1.1vw;
      background: #539968;
      color: white;
    }







.tournament-description-head {
  margin-right: auto;
}







/* ЗАРЕГИСТРИРОВАННЫЕ УЧАСТНИКИ */

.players-list {
  justify-content: flex-start;
  flex-wrap: wrap;
}

.player {
  justify-content: flex-start;
  margin-right: 6vw;
  width: 31vw;
  margin-top: 6vw;
  overflow: hidden;
}
  .player > image {
    width: 12vw;
    height: 12vw;
    margin-right: 2vw;
    flex-shrink: 0;

    border-radius: 100%;
    background: linear-gradient(to right bottom, #51C276, #3783D7);
    padding: 0.5vw;
  }
  .player > view {
    align-items: flex-start;
    width: 15vw;
    overflow: hidden;
  }
    .player > view > text {
      white-space: nowrap;
      text-overflow: ellipsis;
    }

  .rate > image {
    width: 3vw;
    height: 3vw;
  }




  /* КОМЕНТАРИИ */
  
  .comments {

  }
  .comments-list {
    
  }
    .comment {
      justify-content: space-between;
      align-items: flex-start;
    }

    .left_comment-side {
      align-items: flex-start;
      justify-content: space-between;
    }
      .left_comment-side > text {
        margin-top: 3.5vw;
        display: block;
        width: 100%;
      }

    .player-info {

    }

      .player-info > image {
        width: 12vw;
        height: 12vw;
        margin-right: 2vw;
        flex-shrink: 0;

        border-radius: 100%;
        background: linear-gradient(to right bottom, #51C276, #3783D7);
        padding: 0.5vw;   
      }
      .player-info > view {
        align-items: flex-start;
      }
        .player-info > view > text:first-child {
          font-weight: 700;
        }

      .player-comment {
        margin-top: 2.2vw;
      }

    .buttons {
      /* border-radius: 163.303px; */
      padding: 3.5vw 3.5vw 3.5vw 3.5vw;
      border-radius: 10vw;
    }
      .buttons > text {
        margin: 2vw 0 2vw 0;
      }
        .buttons > image {
          width: 3vw;
          height: 3vw;
        }



    /* оставить коментарий */
    .post-comment {
      align-items: flex-start;
    }
      .post-comment > image {
        width: 12vw;
          height: 12vw;
          margin-right: 2vw;
          flex-shrink: 0;

          border-radius: 100%;
          background: linear-gradient(to right bottom, #51C276, #3783D7);
          padding: 0.5vw; 
          margin-right: 2.8vw;
      }
      .post-comment > textarea {
        height: 25.5vw;
        border: 1px solid #E9EBF0;
        border-radius: 2.2vw;
        padding: 2vw;
      }
      .post-comment > textarea::placeholder {
        font-size: 4.4vw;
      }

    /* кнопка "send" */
    .send-button {
      justify-content: flex-end;
      width: 100%;
    }
      .send-button > button {
        width: 28vw;
        background-color: #42995C;
        color: white;
        margin: 0;
        font-weight: 500;
      }